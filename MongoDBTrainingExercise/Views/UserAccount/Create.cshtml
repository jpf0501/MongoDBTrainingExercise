@model MongoDBTrainingExercise.Models.ViewModels.UserAccountViewModel;

@{
    ViewData["Title"] = "Create Account";
}

<div class="text-left">
    <h2 class="display-4 my-4">Create Account</h2>
</div>

<form method="post" asp-action="Create" asp-controller="UserAccount">
    <div class="my-4">
        <label for="FirstName" class="mb-2">Username</label>
        @Html.TextBoxFor(m => m.username, new { @class = "form-control w-50" })
    </div>

    <div class="my-4">
        <label for="LastName" class="mb-2">Password</label>
        @Html.PasswordFor(m => m.password, new { @class = "form-control w-50" })
    </div>

    <div class="my-4">
        <label for="LastName" class="mb-2">Is Admin</label>
        @Html.CheckBoxFor(m => m.isAdmin)
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>