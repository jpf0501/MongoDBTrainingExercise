@model IEnumerable<MongoDBTrainingExercise.Models.ViewModels.TeacherViewModel>;

@{
    ViewData["Title"] = "Teachers";
    ViewBag.Message = TempData["PromptCreate"];
}

<div class="text-left">
    <h2 class="display-4 my-4">List of Teachers</h2>
</div>

<div class="my-4">
    <a href="@Url.Action("Create", "Teacher")" class="btn btn-primary" role="button">Create</a>
</div>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

<table class="table table-condensed mt-4"
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>Teacher Id</th>
            <th>Teacher Name</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
                    <tr>
                        <td>
                            <a href="@Url.Action("Edit", "Teacher", new { id = item.teacherId })" class="btn btn-success">Edit</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Teacher", new { id = item.teacherId })" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                @Html.DisplayFor(m => item.teacherId)
                        </td>
                        <td>
                @Html.DisplayFor(m => item.firstName) @Html.DisplayFor(m => item.lastName)
                        </td>
                    </tr>
    }
    <tr>
</table>
